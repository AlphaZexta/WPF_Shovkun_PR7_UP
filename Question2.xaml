<Page x:Class="WPF_Shovkun_PR7_UP.Question2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Shovkun_PR7_UP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Question2">

    <Grid>
        <Label Content="Что такое сессия?" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Orientation="Vertical" Width="300" Height="100" Margin="0,150,0,0">
            <RadioButton x:Name="A1" Content="Процесс получения зачётов, и допуска к экзамену"/>
            <RadioButton x:Name="A2" Content="Боль, страдание и разочарование"/>
            <RadioButton x:Name="A3" Content="Отчисление половины группы"/>
            <RadioButton x:Name="A4" Content="Всё, вместе вязтое"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,250,0,0">
        <Button x:Name="NQ" Content="Следующий вопрос" FontSize="20" Width="190" Height="40" Click="NQ_Click"/>
        <Button x:Name="GB" Content="Назад" FontSize="20" Width="190" Height="40" Click="GB_Click"/>
        </StackPanel>
    </Grid>
</Page>
