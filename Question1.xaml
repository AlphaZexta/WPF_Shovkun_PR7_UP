<Page x:Class="WPF_Shovkun_PR7_UP.Question1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Shovkun_PR7_UP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Question1">

    <Grid>
        <Label Content="В каком году появилась ОС Windows?" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Orientation="Vertical" Width="200" Height="100" Margin="0,150,0,0">
            <RadioButton x:Name="A1" Content="1984"/>
            <RadioButton x:Name="A2" Content="1985"/>
            <RadioButton x:Name="A3" Content="1986"/>
            <RadioButton x:Name="A4" Content="Да какая разница было да было"/>
        </StackPanel>
        <Button x:Name="NQ" Content="Следующий вопрос" FontSize="20" Width="190" Height="40" Margin="0,250,0,0" Click="NQ_Click"/>
    </Grid>
</Page>
