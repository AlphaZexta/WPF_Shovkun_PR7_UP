<Page x:Class="WPF_Shovkun_PR7_UP.Question3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Shovkun_PR7_UP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Question3">

    <Grid>
        <Label Content="Как расшифровывается ИСРПО?" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Orientation="Vertical" Width="430" Height="100" Margin="0,150,0,0">
            <RadioButton x:Name="A1" Content="Инструментальные средства и разработки программного оборудования"/>
            <RadioButton x:Name="A2" Content="Инструментальные средства и разработки программного обеспечения"/>
            <RadioButton x:Name="A3" Content="И случился рай, предмет отменили"/>
            <RadioButton x:Name="A4" Content="И семён рабом препода облачился"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,250,0,0">
            <Button x:Name="NQ" Content="Следующий вопрос" FontSize="20" Width="190" Height="40" Click="NQ_Click"/>
            <Button x:Name="GB" Content="Назад" FontSize="20" Width="190" Height="40" Click="GB_Click"/>
        </StackPanel>
    </Grid>
</Page>
